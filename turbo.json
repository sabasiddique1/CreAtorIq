{
  "$schema": "https://turbo.build/schema.json",
  "version": "2",
  "tasks": {
    "build": {
      "description": "Build the application",
      "cache": false,
      "inputs": ["src/**", "tsconfig.json", "package.json"],
      "outputs": ["dist/**", ".next/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": false
    },
    "type-check": {
      "cache": false
    }
  },
  "globalDependencies": ["**/.env", "**/.env.local"]
}
